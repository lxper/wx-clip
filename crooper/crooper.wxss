.crooper{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background-color: black
}
.imgs{
  width: 70%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 9
}
.move-area{
  width: 70%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 999
}
.move-item{
  position: absolute;
  top: 100rpx;
  left: 0;
  z-index: 998;
  border: 1rpx solid salmon;
}
.move-item-scale{
  position: absolute;
  bottom: 0;
  right: 0;
  width: 50rpx;
  height: 50rpx;
  background-color: rgba(99, 184, 255, 0.6)
}
.choose-img{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  border: 1px solid red;
}
.clip{
  width: 70%;
  position: absolute;
  left: 500%;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  border: 1rpx solid rosybrown;
  z-index: 1
}
.fake{
  width: 300rpx;
  height: 300rpx;
  background-color: red
}
.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
}
.make-clip{
  position: fixed;
  width: 40%;
  height: 70rpx;
  bottom: 30rpx;
  line-height: 70rpx;
  left: 30%;
  color: white;
  background-color: burlywood
}
.close-clip{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  width: 50rpx;
  height: 50rpx;
  background-color: red;
  border-radius: 50%;
  text-align: center;
  line-height: 50rpx;
  color: white;
}
